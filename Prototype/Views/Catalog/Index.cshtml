@model IEnumerable<Prototype.Models.Book>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Book list</h2>
        </div>
        <div class="col-6">
            Add new book
        </div>
        <br />

            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Book Name</th>
                        <th>Publisher</th>
                        <th>Author</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach  (var book in Model)
                    {
                        <tr>
                            <td width="30%">@book.Name</td>
                            <td width="30%">@book.Publisher</td>
                            <td width="30%">@book.Author</td>
                        </tr> 
                    }
                </tbody>
            </table>
          

    </div>
</div>

